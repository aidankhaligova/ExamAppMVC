@using ExamApp.Service.ViewModels.Lesson;
@model List<LessonViewModel>

@{
    ViewData["Title"] = "Lessons";
}

<h1>Lessons</h1>
<table id="example" class="table table-striped table-bordered tbl" style="width:100%">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Class</th>
            <th>TeacherSurname</th>
            <th>TeacherName</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Class</td>
                <td>@item.TeacherSurname</td>
                <td>@item.TeacherName</td>
                <td>
                    <a href="Update/@item.Code" class="btn btn-primary bgupdate" id="btnUpdate">Update</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.Code">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger bgdelete"
                                onclick="return confirm('Are you sure to delete this record?')"> 
                                Delete
                            </button>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary bgupdate" asp-controller="Lesson" asp-action="Create" id="myBtnAdd">Add</a>