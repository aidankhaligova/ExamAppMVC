@using ExamApp.Service.ViewModels.Lesson;
@model LessonViewModel

<h1>Update Lesson</h1>
<form method="post" asp-action="UpdateLesson">
    <input type="hidden" asp-for="Code"/>
  <div class="form-group">
    <label for="">Name</label>
    <input type="text" class="form-control" asp-for="Name">
  </div>
  <div class="form-group">
      <label for="" class="form-label">Class</label>
    <input type="number" class="form-control" asp-for="Class">
  </div>
  <div class="form-group">
    <label for="">Teacher Surname</label>
    <input type="text" class="form-control" asp-for="TeacherSurname">
  </div>
  <div class="form-group">
      <label for="" class="form-label">Teacher Name</label>
    <input type="text" class="form-control" asp-for="TeacherName">
  </div>
  <button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>