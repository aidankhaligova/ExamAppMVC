@using ExamApp.Service.ViewModels.Student;
@model List<StudentViewModel>

@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>
<table id="example" class="table table-striped table-bordered tbl" style="width:100%">
    <thead>
        <tr>
            <th>No</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Class</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.No</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Class</td>
                <td>
                    <a href="Update/@item.No" class="btn btn-primary bgupdate" id="btnUpdate"><i class='fas fa-download'></i>Update</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.No">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-danger bgdelete"
                                onclick="return confirm('Are you sure to delete this record?')">
                                Delete
                            </button>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary bgupdate" asp-controller="Student" asp-action="Create" id="myBtnAdd"><i class='fas fa-download'></i>Add</a>